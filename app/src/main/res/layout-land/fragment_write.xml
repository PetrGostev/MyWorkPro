<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:ignore="PrivateResource,UnusedAttribute">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/title"
                android:inputType="textCapSentences"
                android:paddingStart="@dimen/margin_start"
                android:paddingLeft="@dimen/margin_start"
                android:paddingTop="@dimen/margin_top"
                android:paddingEnd="@dimen/margin_end"
                android:paddingRight="@dimen/margin_end"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/write"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingStart="@dimen/margin_start"
                android:paddingLeft="@dimen/margin_start"
                android:paddingTop="@dimen/margin_top"
                android:paddingEnd="@dimen/margin_end"
                android:paddingRight="@dimen/margin_end"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"
                android:textSize="14sp"
                tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/date_write"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_top"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextPrimary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>